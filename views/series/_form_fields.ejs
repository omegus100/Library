<div class="form-row">
    <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%= series.title %>">
    </div>
    <div class="form-item">
        <label>Author</label>
        <select name="author">
            <% authors.forEach(author => { %>
                <option 
                    value="<%= author.id %>" 
                    <%= String(author.id) === String(series.author) ? 'selected' : '' %>>
                    <%= author.firstName %> <%= author.lastName %>
                </option>
            <% }) %>
        </select>
    </div>
</div>


