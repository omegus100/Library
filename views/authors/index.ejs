<h2 class="page-header">Authors 
    <span> 
        <a href="/authors/new" class="btn btn-search" >Add</a>
    </span>
</h2>
<form actions="/authors" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>First Name</label>
            <input type="text" name="firstName" value="<%= searchOptions.firstName %>">
        </div>
        <div class="form-item">
            <label>Last Name</label>
            <input type="text" name="lastName" value="<%= searchOptions.lastName %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-search" type="submit">Search</button>
    </div>
</form>
<br>
<% authors.forEach(author => { %>      
    <div class="author-row">
        <div class="author-name"><a href="/authors/<%= author.id %>"><%= author.firstName %> <%= author.lastName %></a></div>
        <div class="btn-row">   
            <a class="btn btn-details" href="/authors/<%= author.id %>">View</a>
            <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>
            <%- include('../partials/deleteForm', { url: `/authors/${author.id}`}) %>
        </div>
    </div>
<% }) %>